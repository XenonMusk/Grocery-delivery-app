<section class="status" >
    <div class="container mx-auto">
        <div class=" status-box w-full lg:w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12">
                <h1 class=" text-xl font-bold"> Track Your Order Here</h1>
                <h6 class=" bg-white py-1 rounded-full px-4 text-green-600 text-xs"> <%=order._id%></h6>
                <input id="hiddenInput" type="hidden" value="<%=JSON.stringify(order)%>" name="" id="">
            </div>
            <ul>
            
                <li class="status_line text-sm md:text-xl pb-16" data-status="order_placed"> <span> Your Order is Confirmed</span></li>
                <li class="status_line text-sm md:text-xl pb-16 " data-status="packed"> <span> Your Order is Packed</span></li>
                <li class="status_line text-sm md:text-xl pb-16" data-status="handed"> <span> Your Order is Handed to Delivery Partner</span></li>
                <li class="status_line text-sm md:text-xl pb-16" data-status="delivery"> <span> Your Order is Out For Delivery</span></li>
                <li class="status_line text-sm md:text-xl " data-status="delivered"> <span> Your Order is Delivered </span></li>
            </ul>
        </div>
    </div>

</section>